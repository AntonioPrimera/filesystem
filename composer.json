{
    "name": "antonioprimera/filesystem",
    "description": "A simple set of File and Folder classes to easily manage files and folders operations",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "AntonioPrimera\\FileSystem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AntonioPrimera\\FileSystem\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Antonio Primera",
            "email": "antonio@cus.ro"
        }
    ],
    "require": {
