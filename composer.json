{
    "name": "antonioprimera/filesystem",
    "description": "A simple set of File and Folder classes to easily manage files and folders operations",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "AntonioPrimera\\FileSystem\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AntonioPrimera\\FileSystem\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Antonio Primera",
            "email": "antonio@cus.ro"
        }
    ],
    "require": {
        "php": ">=8.2",
		"ext-zip": "*"
	},
    "require-dev": {
        "pestphp/pest": "^v3.1.0",
        "spatie/ray": "^1.41"
    },
    "scripts": {
        "test": "./vendor/bin/pest --display-deprecations --display-warnings --coverage"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
